@model IEnumerable<Dungeons_And_Dragons_Character_Manager_App.Models.Character>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Dungeons_And_Dragons_Character_Manager_App

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-controller="Characters" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.currentHitPoints)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.currentHitPoints)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.temporaryHitPoints)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.maxHitPoints)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.proficiencyBonus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.armourClass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.currentHitDice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalHitDice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numGold)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numSilver)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numCopper)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numPlatinum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numElectrum)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
